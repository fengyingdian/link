<!-- components/tabtop/index.wxml -->
<view class="tab">
  <view class="select">
    <block wx:for="{{titles}}">
      <view class="itemShow" wx:if="{{index==titleSelected}}" id="{{index}}">
        <text>{{item.name}}</text>
        <view class="bar" />
      </view>
      <view class='itemHide' wx:if="{{index!=titleSelected}}" bindtap='onTap' id="{{index}}">
        <text>{{item.name}}</text>
        <view class="hide" />
      </view>
    </block>
  </view>
</view>
