<!--components/launchapp/index.wxml-->
<button
  class="container row"
  style="{{isIphoneX ? 'margin: 12rpx 32rpx 34px' : ''}}"
  open-type="{{isLogin ? '' : 'getUserInfo'}}"
  catch:getuserinfo="onGotAuthorization"
  catch:tap="{{isLogin ? 'onLaunchComment' : ''}}"
  hover-class="none">
  <view class="image-box row">
    <open-data
      class="image"
      type='userAvatarUrl'></open-data>
  </view>
  <text class="comment"> {{tips}} </text>
</button>
