<!--components/launchapp/index.wxml-->
<popup isShow="{{isShow}}" catch:hide="onHide">
  <view class="bottom-bar row-space-around {{isIphoneX?'iphoneX-bottom':''}}">
    <button class="item row-center" open-type="share" hover-class="none">
      <image class="image" src="/assets/icons/wechat.png" style="height: 36rpx"/>
      <text class="text"> 邀请好友围观 </text>
    </button>
    <view class="middle" />
    <button class="item row-center" bindtap="onPoster" hover-class="none">
      <image class="image" src="/assets/icons/circle.png" />
      <text class="text"> 生成分享海报 </text>
    </button>
  </view>
</popup>
